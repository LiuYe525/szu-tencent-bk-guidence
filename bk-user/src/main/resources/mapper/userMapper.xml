<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.szuse.user.mapper.UserMapper">

    <resultMap id="BaseResultMap" type="com.szuse.user.entity.User">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="age" property="age"/>
        <result column="email" property="email"/>
    </resultMap>

    <select id="findAll" resultType="com.szuse.user.entity.User">
        select *
        from users
    </select>
    <select id="getOneById" resultType="com.szuse.user.entity.User" parameterType="long">
        select *
        from users
        where id = #{id}
    </select>
</mapper>